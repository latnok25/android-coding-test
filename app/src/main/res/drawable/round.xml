<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#9400D3" />
        <gradient android:angle="-90" android:startColor="#9932CC" android:endColor="#8B008B"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#8B008B" />
        <solid android:color="#8B008B"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#9400D3" />
        <gradient android:angle="-90" android:startColor="#8B008B" android:endColor="#9932CC" />
    </shape>
</item>
</selector>